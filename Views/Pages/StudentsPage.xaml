<Page x:Class="StudentManager.Views.Pages.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManager.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Selectionner la filière:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
            <ComboBox x:Name="MajorComboBox" Width="200" Margin="0,0,10,0" />
            <TextBlock Text="Recherche:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0"/>
        </StackPanel>

        <ui:Card Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="10" MinWidth="250">
            <StackPanel>
                <TextBlock Text="Informations sur la filière:" FontSize="16" FontWeight="Bold" Margin="10"/>
                <TextBlock Text="This is the content of the card." Margin="10" TextWrapping="Wrap"/>
            </StackPanel>
        </ui:Card>
        <ui:DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" Margin="10" ItemsSource="{Binding StudentsViewModel.Students}"
                     SelectionMode="Extended" SelectionUnit="FullRow" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Filière" Binding="{Binding Major.Name}"/>
                <DataGridTextColumn Header="Date de naissance" Binding="{Binding DateOfBirth}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </ui:DataGrid>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <ui:Button Content="Ajouter" Width="100" Margin="10,0,10,0" Click="AddButton_Click"/>
            <ui:Button Content="Modifier" Width="100" Margin="10,0,10,0"/>
            <ui:Button Content="Supprimer" Width="100" Margin="10,0,10,0"/>
        </StackPanel>
    </Grid>
</Page>
