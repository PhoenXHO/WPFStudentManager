<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManager.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="StudentManager.Views.Pages.StudentsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Select Major:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
            <ComboBox x:Name="MajorComboBox" Width="200" Margin="0,0,10,0" />
            <TextBlock Text="Search student:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0"/>
            <!--<TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
            <CheckBox Content="CheckBox"/>-->
        </StackPanel>

        <ui:Card Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="10" MinWidth="250">
            <StackPanel>
                <TextBlock Text="Major informations:" FontSize="16" FontWeight="Bold" Margin="10"/>
                <TextBlock Text="This is the content of the card." Margin="10" TextWrapping="Wrap"/>
            </StackPanel>
        </ui:Card>
        <ui:DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="True" Margin="10" d:ItemsSource="{d:SampleData ItemCount=10}" />


        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <ui:Button Content="Add" Width="100" Margin="10,0,10,0"/>
            <ui:Button Content="Edit" Width="100" Margin="10,0,10,0"/>
            <ui:Button Content="Delete" Width="100" Margin="10,0,10,0"/>
        </StackPanel>
    </Grid>
</Page>
